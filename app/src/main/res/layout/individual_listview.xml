<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/indName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="NAME"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:textColor="@color/AntiqueWhite"
            />

        <TextView
            android:id="@+id/indBall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:textColor="@color/Aquamarine"
            android:text="BALL"

             />



        <TextView
            android:id="@+id/indScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/Orange"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:text="SCORE" />

        <TextView
            android:id="@+id/indType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/Red"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:text="Type" />

        <TextView
            android:id="@+id/indinnings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:gravity="center"
            android:textColor="@color/YellowGreen"
            android:text="Innings" />


    </LinearLayout>


</LinearLayout>